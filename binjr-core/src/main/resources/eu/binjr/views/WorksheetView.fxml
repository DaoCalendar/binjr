<?import eu.binjr.common.javafx.controls.DrawerPane?>
<?import eu.binjr.common.javafx.controls.TimeRangePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.MaskerPane?>
<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="651.0" styleClass="skinnable-pane-border"
            AnchorPane.rightAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="537.0" prefWidth="687.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER_RIGHT">
            <AnchorPane>
                <VBox.margin>
                    <Insets top="1.0"/>
                </VBox.margin>
                <HBox alignment="CENTER_LEFT" styleClass="worksheet-tool-bar" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0">

                    <HBox fx:id="navigationToolbar" HBox.hgrow="SOMETIMES">
                        <Button fx:id="backButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="1.0"
                                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="dialog-button"
                                text="back"
                                textAlignment="CENTER">
                            <graphic>
                                <HBox alignment="CENTER" styleClass="icon-container">
                                    <Region styleClass="backArrow-icon"/>
                                </HBox>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Go back">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button fx:id="forwardButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="1.0"
                                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="dialog-button"
                                text="forward"
                                textAlignment="CENTER">
                            <graphic>
                                <HBox alignment="CENTER" styleClass="icon-container">
                                    <Region styleClass="forwardArrow-icon"/>
                                </HBox>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Go forward">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button fx:id="refreshButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="1.0"
                                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="dialog-button"
                                text="refresh"
                                textAlignment="CENTER">
                            <graphic>
                                <HBox alignment="CENTER" styleClass="icon-container">
                                    <Region styleClass="refresh-icon"/>
                                </HBox>
                            </graphic>
                            <font>
                                <Font size="10.0"/>
                            </font>
                            <tooltip>
                                <Tooltip text="Refresh">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <TimeRangePicker fx:id="timeRangePicker" alignment="CENTER" graphicTextGap="16.0"
                                         maxHeight="1.7976931348623157E308" maxWidth="4000.0" mnemonicParsing="false"
                                         minWidth="425"
                                         minHeight="40"
                                         styleClass="dialog-button"
                                         text="From 22/10/2018 18:00:14 to 23/10/2018 21:00:14" HBox.hgrow="SOMETIMES">
                            <graphic>
                                <HBox alignment="CENTER_LEFT" styleClass="icon-container">
                                    <Region styleClass="time-icon"/>
                                </HBox>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Edit the time range for the current worksheet.">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Tooltip>
                            </tooltip>
                        </TimeRangePicker>
                        <ToolBar fx:id="chartsToolbar">
                            <Button fx:id="snapshotButton" styleClass="dialog-button" contentDisplay="GRAPHIC_ONLY"
                                    maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
                                    text="Snapshot">
                                <tooltip>
                                    <Tooltip text="Save a screen capture of the current worksheet to disk">
                                        <font>
                                            <Font size="11.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="camera-icon"/>
                                    </HBox>
                                </graphic>
                            </Button>
                            <Button fx:id="toggleChartDisplayModeButton" styleClass="dialog-button"
                                    contentDisplay="GRAPHIC_ONLY"
                                    maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
                                    text="Toggle charts display mode">
                                <tooltip>
                                    <Tooltip text="Switch to edit mode (Ctrl+M)">
                                        <font>
                                            <Font size="11.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="settings-icon"/>
                                    </HBox>
                                </graphic>
                            </Button>
                            <ToggleButton fx:id="vCrosshair" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity"
                                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                          mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
                                          text="ToggleButton">
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="vertical-crosshair-icon"/>
                                    </HBox>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Toggle vertical crosshair marker">
                                        <font>
                                            <Font size="10.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                            </ToggleButton>
                            <ToggleButton fx:id="hCrosshair" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                                          maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                          minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0"
                                          prefWidth="40.0"
                                          text="ToggleButton">
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="horizontal-crosshair-icon"/>
                                    </HBox>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Toggle horizontal crosshair marker">
                                        <font>
                                            <Font size="10.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                            </ToggleButton>
                            <Button fx:id="addChartButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                                    maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                    minWidth="-Infinity"
                                    mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
                                    styleClass="dialog-button"
                                    text="Add Chart">
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="addWorksheet-icon"/>
                                    </HBox>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Add a new chart to the current worksheet.">
                                        <font>
                                            <Font size="10.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                            </Button>
                            <MenuButton fx:id="selectChartLayout" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                                        maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                        minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0"
                                        prefWidth="40.0"
                                        styleClass="dialog-button"
                                        text="Chart layout">
                                <tooltip>
                                    <Tooltip text="Select chart layout">
                                        <font>
                                            <Font size="11.0"/>
                                        </font>
                                    </Tooltip>
                                </tooltip>
                                <graphic>
                                    <HBox alignment="CENTER" styleClass="icon-container">
                                        <Region styleClass="layout-icon"/>
                                    </HBox>
                                </graphic>
                            </MenuButton>
                        </ToolBar>
                    </HBox>
                </HBox>
            </AnchorPane>
        </VBox>
        <SplitPane fx:id="splitPane" dividerPositions="0.6949" orientation="VERTICAL" prefHeight="559.0"
                   prefWidth="718.0"
                   VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <VBox>
                <AnchorPane  fx:id="chartViewport" minHeight="0.0" minWidth="0.0" VBox.vgrow="SOMETIMES" styleClass="skinnable-pane-border">
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <AnchorPane fx:id="chartParent" cache="true" cacheHint="SPEED" depthTest="DISABLE"
                                prefHeight="429.0"
                                prefWidth="670.0" styleClass="skinnable-pane-border,chart-viewport-parent"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                AnchorPane.topAnchor="0.0">
                    </AnchorPane>
                    <DrawerPane fx:id="chartProperties" cache="true" cacheHint="SPEED"
                                collapsedWidth="0"
                                expandedWidth="200"
                                side="RIGHT"
                                animation="SLIDE"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="-200.0"
                                AnchorPane.topAnchor="0.0">
                    </DrawerPane>
                </AnchorPane>
                <StackPane fx:id="newChartDropTarget"
                           minHeight="44"
                           maxHeight="44"
                           prefHeight="44"
                           visible="false"
                           managed="false"
                           styleClass="drop-zone">
                    <Label text="New chart" graphicTextGap="18" contentDisplay="GRAPHIC_ONLY">
                        <graphic>
                            <HBox alignment="CENTER" styleClass="icon-container">
                                <Region styleClass="addWorksheet-icon"/>
                            </HBox>
                        </graphic>
                    </Label>
                </StackPane>
            </VBox>
            <AnchorPane fx:id="chartsLegendsPane" styleClass="skinnable-pane-border">
                <ScrollPane id="chartLegendScoll" styleClass="skinnable-pane-border" AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                            fitToHeight="true" fitToWidth="true" minHeight="0.0">
                    <Accordion fx:id="seriesTableContainer" styleClass="series-table">
                        <panes>
                        </panes>
                    </Accordion>
                </ScrollPane>
            </AnchorPane>
        </SplitPane>
    </VBox>
    <MaskerPane fx:id="worksheetMaskerPane" text="" visible="false" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
</AnchorPane>
